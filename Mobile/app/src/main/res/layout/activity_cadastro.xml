<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Cadastro.Presetation.CadastroActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="333dp"
        android:layout_height="310dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/adaptive_icon_removebg_preview" />

    <EditText
        android:id="@+id/editNome"
        android:layout_width="265dp"
        android:layout_height="4dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Nome"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="#393333" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="265dp"
        android:layout_height="4dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#393333" />

    <EditText
        android:id="@+id/editSenha"
        android:layout_width="265dp"
        android:layout_height="4dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHint="#393333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cadastrar" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textConta"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="JÃ¡ tem Conta?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textLink"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="15sp"
            android:text="Entrar"
            android:textColor="#6A7798"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>