<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:padding="16dp">

    <!-- Saudação -->
    <TextView
        android:id="@+id/textGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Olá, João!"
        android:textColor="#1E56A0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sala do dia -->
    <TextView
        android:id="@+id/textTodayRoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sua sala hoje é: D04"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="#DCE6F1"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/textGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título dos avisos -->

    <!-- Carrossel de avisos -->

    <!-- Botões -->

    <TextView
        android:id="@+id/textNoticesLabel"
        android:layout_width="63dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:text="Avisos"
        android:textColor="#1E56A0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTodayRoom" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerAvisos"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textNoticesLabel" />

    <LinearLayout
        android:id="@+id/buttonArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/viewPagerAvisos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnHorarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horários"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E56A0"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E56A0" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
